<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xenovis.planszowki">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".PlanszowkiApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.main.activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity
            android:name=".screen.start.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/StartActivityStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".screen.details.BoardgameDetailsActivity">
        </activity>
        <activity android:name=".screen.comment.CommentsActivity">
        </activity>
    </application>

</manifest>